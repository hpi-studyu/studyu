opt_out_usage
update_fastlane

default_platform(:android)

platform :android do
  desc "Deploy a new version to Google Play"
  lane :deploy_internal do
    upload_to_play_store(
      track: 'internal',
      aab: '../build/app/outputs/bundle/release/app-release.aab',
    )
  end
end
